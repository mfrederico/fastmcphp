{
    "name": "fastmcphp/fastmcphp",
    "description": "PHP implementation of the Model Context Protocol (MCP) using Swoole",
    "type": "library",
    "license": "MIT",
    "keywords": ["mcp", "model-context-protocol", "swoole", "ai", "llm"],
    "require": {
        "php": ">=8.2",
        "psr/log": "^3.0",
        "symfony/console": "^7.4"
    },
    "suggest": {
        "ext-swoole": "Required for HTTP and SSE transports (Swoole 5.0+)",
        "ext-openswoole": "Alternative to Swoole - Required for HTTP and SSE transports (OpenSwoole 4.0+)"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Fastmcphp\\": "src/",
            "Fastmcphp\\Examples\\": "examples/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fastmcphp\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src tests"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "bin": ["bin/fastmcphp"]
}
